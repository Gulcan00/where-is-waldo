generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Character {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  imgUrl    String
  positions Position[]
}

model Position {
  id          Int       @id @default(autoincrement())
  xCoordinate Decimal   @db.Decimal(10, 8)
  yCoordinate Decimal   @db.Decimal(10, 8)
  radius      Decimal   @db.Decimal(10, 8)
  character   Character @relation(fields: [characterId], references: [id])
  characterId Int
  imgUrl      String
}

model Session {
  id        String   @id @default(cuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  scores    Score[]
}

model Score {
  id        String   @id @default(cuid())
  sid       String
  session   Session  @relation(fields: [sid], references: [sid])
  name      String
  time      BigInt
  createdAt DateTime @default(now())
}
